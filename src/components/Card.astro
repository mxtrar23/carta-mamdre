---
import { Image } from 'astro:assets';
import flower from '../assets/flower.svg'

---

<div class="carta">
	<div class="carta-frente">
		<Image  src={flower} alt='flower' class="flower"/>
			<h2>Para la mejor madre del mundo!</h2>

	</div>
	<div class="carta-atras">
			<h2>¡Felíz dia de la Madre!</h2>
			<p>Tu capacidad para amar, cuidar y guiar a tus hijos es digna de admiración.</p>
	</div>
</div>
<script>
	const carta = document.querySelector('.carta');

carta?.addEventListener('click', () => {
		carta.classList.add('ya')
    carta.classList.toggle('abierta');
});
</script>
<style>
	.flower {
		width: 100%;
		height: 150px;
	}
	.carta {
    width: 300px;
    height: 200px;
    margin: 50px auto;
    perspective: 1000px; /* Permite la perspectiva para el efecto 3D */
    position: relative; /* Posicionamiento relativo para el giro */
    transition: transform 0.5s ease-in-out; /* Animación suave */
	}

	.carta-frente, .carta-atras {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
	}

	.carta-frente {
			background-color: #111846; /* Verde */
			color: white;
			text-align: center;
			padding: 20px 0;
			z-index: 2;
	}

	.carta.ya:not(.abierta) .carta-frente {
		animation: cerrar 1s linear; 
	}


	.carta-atras {
			background-color: #f0f0f096; 
			text-align: center;
			padding: 20px 0;
			box-shadow: #676767 2px 3px 12px 1px;
			color: #111846;
			display: flex;
			justify-content: center;
			align-items: center;
    	flex-direction: column;
	}


	.carta.abierta .carta-frente{
		animation: abrir 1s linear; 
		transform: rotateX(120deg) scale(1.1);
    top: -190px;
	}
	@keyframes abrir {
    0% {
        transform: rotateX(0deg) ;
				top: 0px;
    }
		30%{
			transform: rotateX(59deg) scale(1.12);
    	top: -65px;
		}
		50%{
			transform: rotateX(81deg) scale(1.12);
    	top: -113px;
		}
		80%{
			transform: rotateX(96deg) scale(1.12);
    	top: -147px;
		}
    100% {
			transform: rotateX(120deg) scale(1.1);
    	top: -190px;
    }
}

@keyframes cerrar {
    0% {
			transform: rotateX(120deg) scale(1.1);
			top: -190px;
    }
		30%{
			transform: rotateX(96deg) scale(1.12);
			top: -147px;
		}
		50%{
			transform: rotateX(81deg) scale(1.12);
    	top: -113px;
		}
		80%{
			transform: rotateX(59deg) scale(1.12);
			top: -65px;
		}
    100% {
			transform: rotateX(0deg) ;
			top: 0px;
    }
}

	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
